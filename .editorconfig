# Editor configuration (https://EditorConfig.org)
root = true

[*]
end_of_line              = lf
insert_final_newline     = true
charset                  = utf-8
trim_trailing_whitespace = true

[*.py]
indent_style    = space
indent_size     = 4
max_line_length = 120

[*.toml]
indent_style = space
indent_size  = 4

[*.{yml,yaml}]
indent_style    = space
indent_size     = 2
max_line_length = 120

[*.json]
indent_style = space
indent_size  = 4

[*.md]
trim_trailing_whitespace = false
max_line_length          = 120

[*.sh]
indent_style = space
indent_size  = 4

[zshrc]
indent_style = space
indent_size  = 4

[*.{ini,cfg}]
indent_style = space
indent_size  = 4

[Makefile]
indent_style = tab
